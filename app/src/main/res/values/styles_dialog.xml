<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeSheetBase">
        <item name="android:layout_gravity">bottom|center</item>
        <item name="cardBackgroundColor">?colorSurfaceVariant</item>
        <item name="contentPadding">@dimen/l_50</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="cardElevation">@dimen/l1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeTopRounded</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ThemeSheet" parent="ThemeSheetBase">
        <item name="contentPaddingBottom">8dp</item>
        <item name="contentPaddingTop">0dp</item>
    </style>
    <style name="ShapeTopRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">@dimen/l1</item>
        <item name="cornerSizeTopRight">@dimen/l1</item>
    </style>
    <style name="ThemeButtonBasic">
        <item name="android:textColor">?colorSurfaceVariant</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:singleLine">true</item>
        <item name="iconTint">?colorSurfaceVariant</item>
    </style>

    <style name="ThemeButton" parent="ThemeButtonBasic">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:stateListAnimator">@null</item>

    </style>

    <style name="ThemeButtonDialog" parent="ThemeButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>


    <style name="ThemeBottomSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ThemeBottomSheetStyle</item>
        <item name="android:navigationBarColor">?colorSurfaceVariant</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ThemeBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="dialog_animation_fade" >
        <item name="android:windowEnterAnimation">@anim/slide_in_btt</item>
        <item name="android:windowExitAnimation">@anim/slide_out_btt</item>
    </style>
    <style name="DialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@style/AppearanceFoundation.Title</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogTextGray" >
        <item name="android:textAppearance">@style/AppearanceFoundation.Caption.Variant</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="DialogTabsHl">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="DialogTabs" parent="DialogTabsHl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="tint">@color/color_primary_transient</item>
    </style>
</resources>